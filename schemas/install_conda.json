{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "install_conda.json",
  "type": "object",
  "description": "Config schema of install conda step.",
  "properties": {
    "python_version": {
      "type": "string",
      "default": "3.6"
    },
    "conda_version": {
      "type": "string",
      "default": "latest"
    },
    "env_name": {
      "type": "string"
    },
    "bit": {
      "type": "string",
      "enum": [
        "32",
        "64"
      ]
    }
  },
  "required": ["python_version", "conda_version", "bit"]
}
